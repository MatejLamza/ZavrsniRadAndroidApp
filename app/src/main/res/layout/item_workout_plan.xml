<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        android:id="@+id/cv_athlete"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardBackgroundColor="@color/lightGrey"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/workout_image"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/squat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90 min"
                app:layout_constraintStart_toEndOf="@+id/workout_image"
                android:layout_marginStart="48dp"
                android:id="@+id/tv_workoutPlan_duration"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Leg Workout"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_workoutPlan_duration"
                android:id="@+id/tv_workoutPlan_name"
                app:layout_constraintStart_toEndOf="@+id/workout_image"
                android:layout_marginStart="28dp"/>

        <TextView
                android:id="@+id/tv_Goal"
                android:text="Goal: "
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_workoutPlan_name" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/workout_image"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.278"
                app:layout_constraintVertical_bias="0.244"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>