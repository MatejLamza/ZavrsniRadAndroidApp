<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/cv_workout_plan"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="300dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorPrimary">


   <RelativeLayout
           android:id="@+id/workout_plan_container"
           android:layout_width="match_parent"
           android:layout_height="match_parent">


       <ImageView
               android:id="@+id/iv_item_plan_image"
               android:scaleType="centerCrop"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>


       <TextView
               android:id="@+id/tv_item_plan_goal"
               android:textColor="@color/white"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="190dp"
               android:background="@drawable/shape_color_text_view"
               android:text="MUSCLE"
               android:layout_width="wrap_content"
               android:layout_height="35dp"/>

       <TextView
               android:id="@+id/tv_item_workout_total_duration"
               android:textColor="@color/white"
               android:layout_marginBottom="40dp"
               android:textSize="20sp"
               android:layout_marginLeft="20dp"
               android:textAllCaps="true"
               android:text="10 weeks"
               android:layout_alignParentBottom="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       
       <TextView
               android:layout_marginBottom="20dp"
               android:layout_marginLeft="20dp"
               android:textColor="@color/white"
               android:textAllCaps="true"
               android:text="Beginner Plan"
               android:layout_alignParentBottom="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>


   </RelativeLayout>







</android.support.v7.widget.CardView>