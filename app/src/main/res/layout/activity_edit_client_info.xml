<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_background">

    <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Client Information"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_marginBottom="30dp"/>

        <LinearLayout
                android:id="@+id/edit_main_layout"
                android:orientation="vertical"
                android:layout_below="@id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginLeft="120dp"
                        android:layout_marginRight="50dp"
                        android:text="Current"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="New"
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="10dp"
                        android:text="Weight: "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_current_weight"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_new_weight"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>



            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="10dp"
                        android:text="BF % :    "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:textColor="@color/white"
                        android:id="@+id/et_current_bf"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>

                <EditText
                        android:textColor="@color/white"
                        android:id="@+id/et_new_bf"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textAlignment="center"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>



            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="10dp"
                        android:text="Chest:   "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_current_chest"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_new_chest"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>



            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="10dp"
                        android:text="Arms:    "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_current_arms"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_new_arms"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>



            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="10dp"
                        android:text="Waist:   "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_current_waist"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_new_waist"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>



            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_marginTop="10dp"
                        android:text="Legs:    "
                        android:textSize="25sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <EditText
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:id="@+id/et_current_legs"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>

                <EditText
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:id="@+id/et_new_legs"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_textbox"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>



            </LinearLayout>


        </LinearLayout>

        <Button
                android:layout_below="@id/edit_main_layout"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_button"
                android:id="@+id/btn_save_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingRight="70dp"
                android:paddingLeft="70dp"
                android:textAllCaps="false"/>

    </RelativeLayout>





</LinearLayout>