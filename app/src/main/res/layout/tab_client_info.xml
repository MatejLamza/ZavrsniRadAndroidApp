<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:background="@drawable/register_background"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView

                android:id="@+id/basicMeasureLabel"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Basic Measurements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.011"/>

        <LinearLayout
                android:id="@+id/basciMeasureContainer"
                android:orientation="vertical"
                android:layout_below="@id/basicMeasureLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Height: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_height"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="175"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Weight: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_weight"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/MeasurementsLabel"
                android:layout_below="@id/basciMeasureContainer"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Measurements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.011"/>

        <LinearLayout
                android:id="@+id/measurementsContainer"
                android:orientation="vertical"
                android:layout_below="@id/MeasurementsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Body Fat Percentage: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_bf"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="5.4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Chest: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_chest"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Arms: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_arms"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Legs: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_legs"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Waist: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_waist"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/Info"
                android:layout_below="@id/measurementsContainer"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.05" app:layout_constraintVertical_bias="0.011"/>

        <LinearLayout
                android:id="@+id/infoContainer"
                android:orientation="vertical"
                android:layout_below="@id/Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Age: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/client_details_Age"
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="37"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">

                <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="25sp"
                        android:text="Gender: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="25sp"
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>