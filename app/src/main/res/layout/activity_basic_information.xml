<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/register_background">

    <RelativeLayout
            android:layout_marginRight="@dimen/margin_login_container"
            android:layout_marginLeft="@dimen/margin_login_container"
            android:layout_marginTop="@dimen/marginTop_login_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_basic_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginBottom="30dp"/>

        <LinearLayout
                android:id="@+id/layout1"
                android:layout_below="@id/tv_basic_info"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textAllCaps="true"
                        android:textSize="@dimen/login_textview_size"
                        android:textColor="@color/white"/>

                <EditText
                        android:textColor="@color/white"
                        android:id="@+id/basicInfo_firstName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_textbox"
                        android:textSize="@dimen/login_textview_size"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="@dimen/login_edittext_padding"
                        android:paddingRight="@dimen/login_edittext_padding"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textAllCaps="true"
                        android:textSize="@dimen/login_textview_size"
                        android:textColor="@color/white"/>

                <EditText
                        android:textColor="@color/white"
                        android:id="@+id/basicInfo_lastName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_textbox"
                        android:textSize="@dimen/login_textview_size"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="@dimen/login_edittext_padding"
                        android:paddingRight="@dimen/login_edittext_padding"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textAllCaps="true"
                        android:textSize="@dimen/login_textview_size"
                        android:textColor="@color/white"/>

                <EditText
                        android:id="@+id/basicInfo_Age"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="40dp"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_textbox"
                        android:textSize="@dimen/login_textview_size"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="@dimen/login_edittext_padding"
                        android:paddingRight="@dimen/login_edittext_padding"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textAllCaps="true"
                        android:textSize="@dimen/login_textview_size"
                        android:textColor="@color/white"/>

                <Spinner
                        android:id="@+id/basicInfo_Gender"
                        android:layout_width="match_parent"
                        android:entries="@array/gender_dropdown"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_textbox"
                        android:textSize="@dimen/login_textview_size"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="@dimen/login_edittext_padding"
                        android:paddingRight="@dimen/login_edittext_padding"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:id="@+id/layout2"
                android:layout_below="@id/layout1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:background="@drawable/shape_button"
                    android:id="@+id/btn_Register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finish"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingRight="70dp"
                    android:paddingLeft="70dp"
                    android:textAllCaps="false"/>

        </LinearLayout>


    </RelativeLayout>




</RelativeLayout>