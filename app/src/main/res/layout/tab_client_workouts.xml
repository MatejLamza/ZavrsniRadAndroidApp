<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
                android:id="@+id/currentWorkoutsLabel"
                android:textSize="35sp"
                android:text="Current Workout Plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_current_workout_plans"
                android:layout_below="@id/currentWorkoutsLabel"
                android:layout_width="match_parent"
                android:layout_height="150dp">

        </android.support.v7.widget.RecyclerView>

        <View
                android:layout_below="@id/rec_current_workout_plans"
                android:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:textSize="35sp"
                android:text="Completed Workout Plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_previous_workouts"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


</LinearLayout>