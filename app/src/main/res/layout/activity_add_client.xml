<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_background">

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/add_basic_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_marginBottom="30dp"/>

                <LinearLayout
                        android:layout_marginLeft="40dp"
                        android:id="@+id/layout1"
                        android:layout_below="@id/add_basic_info"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="First name"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Last name"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_last_name"
                                android:inputType="text"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_age"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <Spinner
                                android:id="@+id/add_gender"
                                android:layout_width="match_parent"
                                android:entries="@array/gender_dropdown"
                                android:layout_height="40dp"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/add_basic_measure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic Measurements"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_marginBottom="30dp"/>

                <LinearLayout
                        android:layout_marginLeft="40dp"
                        android:layout_below="@id/add_basic_measure"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_height"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_weight"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/add_measurements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Measurements"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:layout_marginBottom="30dp"/>

                <LinearLayout
                        android:layout_marginLeft="40dp"
                        android:layout_below="@id/add_measurements"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bodyfat %"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_bfperc"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chest"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_chest"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Arms"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_arms"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waist"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_waist"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Legs"
                                android:textAllCaps="true"
                                android:textSize="@dimen/login_textview_size"
                                android:textColor="@color/white"/>

                        <EditText
                                android:id="@+id/add_legs"
                                android:layout_width="match_parent"
                                android:inputType="number"
                                android:layout_height="40dp"
                                android:textColor="@color/white"
                                android:background="@drawable/shape_textbox"
                                android:textSize="@dimen/login_textview_size"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="@dimen/login_edittext_padding"
                                android:paddingRight="@dimen/login_edittext_padding"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_button"
                    android:id="@+id/add_btn_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add client"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:paddingRight="70dp"
                    android:paddingLeft="70dp"
                    android:textAllCaps="false"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>